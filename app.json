{
  "expo": {
    "name": "Whingo",
    "slug": "wihngo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "wihngo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Where Hearts & Wings Gather - Connect with birds, share stories, and support conservation",
    "extra": {
      "router": {},
      "eas": {
        "projectId": "1f8be543-8a9c-49dc-ae05-8e8161b36f4c"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.abdelfattahragab.wihngo",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"]
      },
      "associatedDomains": ["applinks:wihngo.com"]
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#4ECDC4",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.abdelfattahragab.wihngo",
      "softwareKeyboardLayoutMode": "pan",
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK",
        "POST_NOTIFICATIONS",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "wihngo",
              "host": "donation"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        },
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "wihngo.com",
              "pathPrefix": "/auth"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#4ECDC4",
          "defaultChannel": "default"
        }
      ],
      "expo-font",
      "expo-video"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
